@model IEnumerable<Toledo.Aplication.Model.GetBirthdaysResponse>
@{ ViewBag.Title = "Aniversáriantes do mês"; }

@using (@Html.BeginForm("Filter", "Employee", FormMethod.Post))
{<div>
        <h4 class="modal-title">Aniversáriantes do mês</h4>
        <table class="table table-hover">
            <caption>Aniversáriantes do mês</caption>
            <thead>
                <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">Data do Aniversário</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ToList())
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.DateBirth.ToString("dd/MM/")@DateTime.Now.Year</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="text-center">
            <button type="submit" class="btn btn-success">Voltar</button>
        </div>
    </div>}